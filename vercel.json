{
  "version": 2,
  "builds": [
    {
      "src": "apps/web/package.json",
      "use": "@vercel/next"
    },
    {
      "src": "apps/docs/package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/(?<path>.*)",
      "destination": "/apps/web/$path"
    }
  ],
  "env": {
    "NEXT_PUBLIC_SITE_URL": "@site_url"
  },
  "buildCommand": "pnpm run build",
  "installCommand": "pnpm install --frozen-lockfile"
}
