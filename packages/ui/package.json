{
  "name": "bracketui",
  "version": "0.0.1",
  "sideEffects": [
    "**/*.css"
  ],
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./styles.css": "./dist/index.css"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "license": "MIT",
  "scripts": {
    "build": "pnpm build:styles && tsup src/index.tsx --format esm,cjs --dts --external react",
    "build:styles": "tailwindcss -i ./src/styles.css -o ./dist/index.css",
    "dev": "pnpm dev:styles & tsup src/index.tsx --format esm,cjs --watch --dts --external react",
    "dev:styles": "tailwindcss -i ./src/styles.css -o ./dist/index.css --watch",
    "check-types": "tsc --noEmit",
    "lint": "eslint src --max-warnings 0",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist"
  },
  "peerDependencies": {
    "react": "^19",
    "tailwindcss": "^4.1.5"
  },
  "devDependencies": {
    "@bracketui/eslint-config": "workspace:*",
    "@bracketui/tailwind-config": "workspace:*",
    "@bracketui/typescript-config": "workspace:*",
    "@tailwindcss/cli": "^4.1.5",
    "@types/react": "^19.1.0",
    "eslint": "^9.39.1",
    "tailwindcss": "^4.1.5",
    "tsup": "^8.0.2",
    "typescript": "5.9.2"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "tailwind-merge": "^3.4.0",
    "tailwind-variants": "^3.2.2"
  }
}
